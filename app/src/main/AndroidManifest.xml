<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.br.minasfrango">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".activity.ClienteActivity" />
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SincronizarDadosActivity"
            android:parentActivityName=".activity.ClienteActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.SincronizarDadosActivity" />
        </activity>

        <activity
            android:name=".activity.VendasActivity"
            android:parentActivityName=".activity.ClienteActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.VendasActivity" />
        </activity>
        <activity
            android:name=".activity.RecebimentoActivity"
            android:label="@string/title_activity_recebimento"
            android:parentActivityName=".activity.ClienteActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.RecebimentoActivity" />
        </activity>
    </application>

</manifest>