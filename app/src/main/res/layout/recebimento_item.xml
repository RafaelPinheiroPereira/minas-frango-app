<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"

        >
        <TextView
            android:id="@+id/txt_id_recebimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:layout_marginLeft="5dp"
            android:textColor="@color/grey_600"
            android:textSize="10sp"
            />
        <TextView
            android:id="@+id/txt_id_venda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CÃ“DIGO DA VENDA"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textSize="10sp"
            />



        <TextView
            android:id="@+id/txt_data_venda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATA VENDA"
            android:layout_marginLeft="5dp"
            android:textColor="@color/grey_600"
            android:textSize="10sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txt_valor_venda"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="TOTAL VENDA"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"
            />
        <TextView
            android:id="@+id/txt_amortizado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor Amortizado"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"

            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/txt_saldo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="Saldo"
            android:textSize="10sp"
            android:textStyle="bold" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary" />

</LinearLayout>
