<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:title="Trinity Mobile - Minas Frango"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimaryDark"
            app:layout_scrollFlags="scroll|enterAlways"
            app:subtitle="Vendas"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txtClienteID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="Codigo Cliente"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtRazaoSocial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/textColorPrimary"
                        android:text="Nome Fantasia"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtCidade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/txtEndereco"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/textColorPrimary"

                        android:text="Rua das Paparaubas, 14 - RenascenÃ§a"
                        android:textSize="14sp" />
                </LinearLayout>


                <View
                    android:id="@+id/divider6"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="?android:attr/listDivider" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="110dp"
                        style="@style/TextInputLayout"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/actCodigoProduto"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:completionThreshold="1"
                            android:hint="COD.Produto"
                            android:textColor="@android:color/black"
                            android:inputType="number|textMultiLine"
                            android:maxLength="5"
                            android:padding="10dp"
                            android:textSize="20sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Spinner
                        android:id="@+id/spnProducts"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:padding="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="110dp"
                        style="@style/TextInputLayout"
                        android:layout_height="wrap_content">



                        <com.br.minasfrango.util.CurrencyEditText

                            android:id="@+id/edtQTDProducts"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:digits="0123456789."
                            android:hint="QTD."
                            android:enabled="true"
                            android:inputType="number|textMultiLine"
                            android:lines="1"
                            android:maxLength="9"
                            android:padding="10dp"
                            android:textSize="14sp"
                            app:groupDivider="."
                            app:monetaryDivider=","
                            app:locale="en_US"
                            android:textColor="@android:color/primary_text_light"
                            app:showSymbol="false">

                            <requestFocus />
                        </com.br.minasfrango.util.CurrencyEditText>


                    </com.google.android.material.textfield.TextInputLayout>

                    <Spinner
                        android:id="@+id/spnUnitys"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:padding="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lotes"
                        android:textSize="18sp" />
                    <Spinner
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:id="@+id/spnLotes"
                        ></Spinner>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="110dp"
                        style="@style/TextInputLayout"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtQTDBicos"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:digits="0123456789."
                            android:hint="QTD.Bicos"
                            android:inputType="number|textMultiLine"
                            android:padding="10dp"
                            android:textColor="@android:color/primary_text_light"
                            android:text="0"
                            android:textSize="20sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="80dp"
                        style="@style/TextInputLayout"
                        android:layout_marginLeft="10dp"

                        android:layout_height="wrap_content">


                        <com.br.minasfrango.util.CurrencyEditText

                            android:id="@+id/cetPrecoUnitario"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:digits="0123456789."
                            android:hint=""
                            android:enabled="false"
                            android:inputType="numberDecimal|textMultiLine"
                            android:lines="1"
                            android:maxLength="9"
                            android:padding="10dp"
                            android:textSize="18sp"
                            app:groupDivider="."
                            app:monetaryDivider=","

                            app:locale="en_US"
                            android:textColor="@android:color/primary_text_light"
                            app:showSymbol="false">

                            <requestFocus />
                        </com.br.minasfrango.util.CurrencyEditText>


                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/txtAmountProducts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:padding="5dp"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="20sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddItem"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:backgroundTint="@color/primary_dark"
                    android:text="Adicionar"
                    android:textColor="@color/white"
                    app:icon="@mipmap/add_shopping_cart_white_48dp"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white" />

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvItens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/txtAmountSale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginLeft="6dp"
                android:text="Total"
                android:layout_marginRight="8dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSalvarVenda"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:textColor="#fff"
                    android:text="Salvar"
                    android:layout_marginRight="10dp"
                    app:backgroundTint="@color/primary_dark"
                    app:icon="@mipmap/ic_save_white_48dp"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnImprimir"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:text="Imprimir"
                    android:textColor="#fff"
                    android:visibility="invisible"
                    app:backgroundTint="@color/primary_dark"
                    app:icon="@mipmap/ic_print"
                    app:iconGravity="textStart" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFotografar"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Comprovante"
                    android:textColor="#fff"
                    android:visibility="invisible"
                    app:backgroundTint="@color/primary_dark"
                    app:icon="@mipmap/ic_photo_camera_black_48dp"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>
