<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_child"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="3dp"
    android:layout_marginLeft="3dp"
    android:layout_marginEnd="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginBottom="-4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:padding="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="2dp">


            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:text="ITEM"
                android:textSize="18sp"

                />

            <TextView

                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:text="BICOS"
                android:textSize="18sp"

                />


            <TextView

                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:text="UNIDADE"
                android:textSize="18sp"

                />

            <TextView

                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_vertical|center_horizontal"

                android:text="QTD."
                android:textSize="18sp" />

            <TextView

                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:gravity="right"
                android:text="PREC.UNIT"
                android:textSize="18sp" />

            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:gravity="right"
                android:text="TOTAL"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            android:padding="2dp">

            <TextView
                android:id="@+id/txtProductName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"

                android:text="lore insproseda"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="12sp"

                />
            <TextView
                android:id="@+id/txt_bicos"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="lore insprosume "
                android:textColor="@android:color/secondary_text_light"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/txtUnit"
                android:layout_width="80dp"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="lore insprosume "
                android:textColor="@android:color/secondary_text_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtQTDProducts"
                android:layout_width="80dp"
                android:layout_height="wrap_content"

                android:layout_gravity="left|center_vertical"
                android:gravity="center|center_vertical"
                android:text="lore insprosume"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="12sp"

                />

            <TextView
                android:id="@+id/txtValorUnitario"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:gravity="right"

                android:text="lore insprosume"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="12sp"

                />

            <TextView
                android:id="@+id/txt_valor_total_item"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="lore insprosume"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="12sp"

                />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>
